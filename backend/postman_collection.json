            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fcmToken\": \"sample_fcm_token_here\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/fcm-token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "fcm-token"]
            }
          }
        }
