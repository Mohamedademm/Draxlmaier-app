        ),
        const SizedBox(height: 16),
        _buildPermissionSection(
          'Communications',
          [
            {'name': 'Envoyer des notifications globales', 'description': 'Diffuser des messages à tous'},
            {'name': 'Modérer les chats', 'description': 'Supprimer/éditer des messages'},
            {'name': 'Créer des groupes', 'description': 'Créer des groupes de discussion'},
            {'name': 'Gérer les groupes', 'description': 'Modifier/supprimer des groupes'},
          ],
        ),
        const SizedBox(height: 16),
        _buildPermissionSection(
          'Administration',
          [
            {'name': 'Accès au dashboard admin', 'description': 'Voir les statistiques et analytics'},
            {'name': 'Gérer les permissions', 'description': 'Attribuer/retirer des permissions'},
